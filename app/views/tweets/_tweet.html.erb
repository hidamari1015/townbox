<div class="card">
  <%= link_to image_tag(tweet.image, class: :card__img ), root_path%>
  <div class="card__body">
    <%= link_to tweet.title, root_path, class: :card__title%>
    <p class="card__summary">
      <%= tweet.catch_copy %>
    </p>
    <%= link_to tweet.user.nickname, root_path, class: :card__user %>
  </div>
</div>